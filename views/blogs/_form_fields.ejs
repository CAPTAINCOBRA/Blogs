<div class="form-group mt-3">
  <label for="title">Title</label>
  <input
    required
    value="<%= blog.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group mt-3">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control">
<%= blog.description %></textarea
  >
</div>
<div class="form-group mt-3">
  <label for="markdown">Markdown</label>
  <textarea
    required
    name="markdown"
    id="markdown"
    class="form-control"
    rows="15"
  >
<%= blog.markdown %></textarea
  >
</div>

<div class="row">
  <a href="/" class="btn btn-secondary mt-4 col col-md-2 p-2 mx-auto">Cancel</a>
  <!-- <div class="col"></div> -->
  <button type="submit" class="btn btn-primary mt-4 col col-md-2 mx-auto">
    Save
  </button>
</div>
