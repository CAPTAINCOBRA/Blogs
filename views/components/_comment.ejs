<div class="card-body p-4">
  <div class="d-flex flex-start">
    <!-- <img
      class="rounded-circle shadow-1-strong me-3"
      src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(23).webp"
      alt="avatar"
      width="60"
      height="60"
    /> -->
    <i
      class="fas fa-3x fa-user rounded-circle shadow-1-strong me-3"
      alt="avatar"
    ></i>
    <div>
      <h6 class="fw-bold mb-1"><%= comment.name %></h6>
      <div class="d-flex align-items-center mb-3">
        <p class="mb-0">
          <%= comment.createdAt.toLocaleDateString() %> <%
          if(JSON.stringify(comment.userId) == JSON.stringify(author._id)){ %>
          <span class="badge bg-primary">Author</span>
          <% } %>
        </p>
        <a href="#!" class="link-muted"
          ><i class="fas fa-pencil-alt ms-2"></i
        ></a>
        <form
          action="/comments/<%= comment.blogId %>/comments/<%= comment._id %>?_method=DELETE"
          method="POST"
          style="display: inline-block; cursor: pointer"
        >
          <button
            type="submit"
            style="background: none; padding: 0px; border: none; color: none"
          >
            <i class="fas fa-trash-alt ms-2" style="color: #ca3737"></i>
          </button>
        </form>
        <!--  <a href="#!" class="link-muted"><i class="fas fa-heart ms-2"></i></a> -->
      </div>
      <p class="mb-0"><%= comment.text %></p>
    </div>
  </div>
</div>
<hr class="my-0" />
