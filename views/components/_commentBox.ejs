    <section id="commentBox">
      <div class="container my-5 py-5" id="comment-container">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12 col-lg-10">
            <h4 class="mb-0">Comments Section</h4>
            <p class="fw-light mb-4 pb-2">Comments by users</p>
            <div class="card text-dark">
              <div class="card-body">
                <form action="/comments/<%= blog.id %>/comments?_method=POST" method="POST">
                  <div class="form-group">
                    <label for="comment">Comment</label> as <span class="blockquote-footer"> <%= user.name %> </span>
                    <textarea
                      class="form-control"
                      id="comment"
                      name="comment"
                      rows="3"
                      placeholder="Enter your comment here"
                      required
                    ></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary mt-4">
                    Submit
                  </button>
                </form>
                <hr class="my-0 mt-4" />

                <!-- //Individual Comment Here  -->
                <% comments.forEach((comment) => { %> 
                  <%- include('../components/_comment', {comment: comment, author: author, user: user}) %>
                <% }) %>
